@model Sistema.Models.Vendas
@using Sistema.Util
@{
    bool readOnly = Convert.ToBoolean(ViewBag.ReadOnly);
    string action = Convert.ToString(ViewBag.Action);
}

<div class="form-row">
    <div class="@Util.Input2">
        @Html.Label("Nº", new { @class = "no-required" })
        @Html.TextBoxFor(model => model.codigo, new { @class = "form-control number", maxlength = "3", Disabled = true })
        @Html.ValidationMessageFor(model => model.codigo, null, new { @class = "text-danger" })
    </div>
</div>

<div class="form-row">
    <div class="@Util.Input3">
        @Html.LabelFor(model => model.dtVenda, new { @class = "required" })
        <div class="input-group-append">
            @Html.TextBoxFor(model => model.dtVenda, new { @class = "form-control datepicker date_time", disabled = true })
            <span class="fa fa-calendar input-group-text" style="font-size:23px"></span>
        </div>
    </div>
    <div class="@Util.Input3">
        @Html.LabelFor(model => model.situacao, new { @class = "no-required" })
        @Html.DropDownListFor(model => model.situacao, Sistema.Models.Vendas.Situacao, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.situacao, null, new { @class = "text-danger" })
    </div>
</div>

<div class="form-row">
    @Html.EditorFor(model => model.Funcionario, "Funcionarios/Select", new { Required = true, Disabled = false })
</div>

<div class="form-row">
    @Html.EditorFor(model => model.Cliente, "Clientes/Select", new { Required = true, Disabled = false })
</div>

<div class="bs-callout bs-callout-primary">
    <h4> Produtos</h4>
    <div class="separador"></div>
    <div class="form-row">
        @Html.EditorFor(model => model.Produto, "Produtos/Select", new { Disabled = false, Required = true, flValor = "S", classForm = Util.Input10 })
    </div>

    <div class="form-row">

        <div class="@Util.Input2">
            @Html.Label("Unidade", new { @class = "required" })
            @Html.DropDownList("unidade", Sistema.Models.Produtos.Unidade, new { @class = "form-control" })
        </div>

        <div class="@Util.Input2">
            @Html.Label("qtProduto", "Quantidade", new { @class = "required" })
            @Html.TextBox("qtProduto", "", new { @class = "form-control money", placeholder = "0,00", style = "text-align: right" })
        </div>

        <div class="@Util.Input2">
            @Html.Label("vlDesconto", "Desconto (%)", new { @class = "required" })
            @Html.TextBox("vlDesconto", "", new { @class = "form-control money", placeholder = "0,00", style = "text-align: right" })
        </div>

        <div style="margin-block:-1px">
            <button id="addProduto" type="button" class="btn btn-success btn-lg" style="margin-top:35px; font-size:14px" title="Adicionar"><b>Adicionar </b> <i class="fa fa-plus"></i></button>
        </div>

    </div>

    @Html.HiddenFor(model => model.jsProdutos)
    <table id="tblProduto" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th width="5%"></th>
                <th width="5%">Cod</th>
                <th width="50%">Produto</th>
                <th width="10%">Vl. unit.</th>
                <th width="10%">Quant.</th>
                <th width="10%">Desconto</th>
                <th width="10%">Total</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td id="ftp" colspan="7" style="text-align:right"></td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="form-row">
    @Html.EditorFor(model => model.CondicaoPagamento, "CondicaoPagamento/Select", new { Required = true, Disabled = false })
</div>

@Html.HiddenFor(model => model.jsParcelas)
<table id="tblParcelas" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th width="10%">Nº parcela</th>
            <th width="15%">Valor Parcela</th>
            <th width="10%">Vencimento</th>
            <th width="55%">Forma de pagamento</th>
        </tr>
    </thead>
    <tfoot>
        <tr>
            <td id="fts" colspan="4" style="text-align:right"></td>
        </tr>
    </tfoot>
</table>

@if (action != "create")
{
    <div class="form-row">
        <div class="@Util.Input3">
            @Html.LabelFor(model => model.dtCadastro)
            <div class="input-group-append">
                @Html.HiddenFor(model => model.dtCadastro)
                @Html.TextBoxFor(model => model.dtCadastro, new { @class = "form-control datepicker date", disabled = true })
                <span class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></span>
            </div>
        </div>

        <div class="@Util.Input3 ">
            @Html.LabelFor(model => model.dtUltAlteracao)
            <div class="input-group">
                @Html.HiddenFor(model => model.dtUltAlteracao)
                @Html.TextBoxFor(model => model.dtUltAlteracao, new { @class = "form-control datepicker date", disabled = true })
                <div class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></div>
            </div>
        </div>
    </div>
}