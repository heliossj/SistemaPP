@model IEnumerable<Sistema.Models.Vendas>
@{
    ViewBag.Title = "Vendas";
    ViewBag.Layout = "~/_Styles/Style.css";
}
<div class="container-fluid">
    <div class="container">
        <div class="horizontal" style="margin-top:15px;">
            @Html.RenderFlashMessage()
            <div class="verticals ten offset-by-one">
                <ol class="breadcrumb breadcrumb-fill2">
                    <li class="active"><a href="@Url.Action("Index")"><i class="fa fa-home"></i></a> </li>
                    <li style="margin-left:15px; margin-right:-12px; font-weight:500 " class="active"><a href="@Url.Action("Index")"> @ViewBag.Title </a></li>
                    @*<li style="margin-right:-5px; font-weight:500"> / qweqwe </li>*@
                </ol>
            </div>
            <div style="margin-block: 15px; text-align:center">
                @Html.ActionLink("Adicionar", "Create", new { }, new { @class = "btn btn-success" })
                @Html.ActionLink("Limpar", "Index", new { }, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>

    <table id="Compras" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th width="5%">Nº</th>
                <th width="10%">Data de abertura</th>
                <th width="10%">Data de validade</th>
                <th width="52%">Cliente</th>
                <th width="10%">Situação</th>
                <th width="13%"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>1</td>
                <td>15/03/2021</td>
                <td>15/08/2021</td>
                <td>JOSUÉ PEREIRA JÚNIOR</td>
                <td>ATIVA</td>
                <td>
                    @Html.ActionLink(" ", "Details", new { }, new { @class = "btn btn-success btn-sm fa fa-eye", @title = "Visualizar registro" })
                    @Html.ActionLink(" ", "Edit", new { }, new { @class = "btn btn-warning btn-sm fa fa-edit", @title = "Editar registro" })
                    @Html.ActionLink(" ", "Delete", new { }, new { @class = "btn btn-danger btn-sm fa fa-trash-o", @title = "Excluir registro" })
                </td>
            </tr>
        </tbody>
    </table>
</div>

@section scripts{
    @Scripts.Render("~/Scripts/Vendas/Index.js")
}
