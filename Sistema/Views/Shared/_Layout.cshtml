@using Sistema.Util;
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <link rel="icon" href="favicon.ico" type="image/x-icon" />
    <link rel="shortcut icon" href="favicon.ico" type="image/x-icon" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
        <img id="divImgNav" src="~/img/Logo.png" width="30" height="30" />
        @Html.ActionLink("Foz Rodapés", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })

        <ul class="navbar-nav">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
                    Cadastro
                </a>
                <div class="dropdown-menu">
                    <a class="dropdown-item" href="#">Usuário</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="@Url.Action("Index", "Cidades")">Cidade</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "Clientes")">Cliente</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "CondicaoPagamento")">Cond. pagamento</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "Estados")">Estado</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "FormaPagamento")">Forma de pag.</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "Fornecedores")">Fornecedor</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "Funcionarios")">Funcionário</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "Grupos")">Grupo</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "OrdemServico")">Ordem de serviço</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "Paises")">País</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "Produtos")">Produto</a>
                    <a class="dropdown-item" href="@Url.Action("Index", "Servicos")">Serviço</a>
                </div>
            </li>
        </ul>
    </nav>
    <div class="container body-content">
        @RenderBody()
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/_Layout/Layout.css")
    @Html.RenderScriptBlocks()
    @RenderSection("scripts", required: false)

    @*<footer id="divFooter" style="width:100%">
            <hr />
            <p style="font-size:12px">&copy; @DateTime.Now.Year - HJ Sistemas</p>
        </footer>*@

</body>

</html>

