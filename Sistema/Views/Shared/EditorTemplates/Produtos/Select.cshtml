@model Sistema.Select.Produtos.Select
@using Sistema.Util;
@{
    bool Disabled = Convert.ToBoolean(ViewData["Disabled"]);
    bool Required = Convert.ToBoolean(ViewData["Required"] ?? true);
    bool OnlySelect = Convert.ToBoolean(ViewData["onlySelect"] ?? true);
    bool LabelVertical = Convert.ToBoolean(ViewData["LabelVertical"]);
    string Label = Convert.ToString(ViewData["Label"] ?? "Produto");
    string classLabel = Convert.ToString(ViewData["classLabel"] ?? Util.Input12);
    string classForm = Convert.ToString(ViewData["classForm"] ?? Util.Input12);
    var Prefix = Html.ClientPrefixName().ToString();
    string action = Convert.ToString(ViewBag.Action);

    var flValor = Convert.ToString(ViewData["flValor"]);
    var flUnidade = Convert.ToString(ViewData["flUnidade"]);
    var flQuantidade = Convert.ToString(ViewData["flQuantidade"]);
    var flValorCompra = Convert.ToString(ViewData["flValorCompra"]);
    var flDesconto = Convert.ToString(ViewData["flDesconto"]);
    var flTotalItem = Convert.ToString(ViewData["flTotalItem"]);

    var idFornecedor = Convert.ToString(ViewData["idFornecedor"] ?? "");
}

@Html.Hidden("isEdit")
@Html.HiddenFor(k => action)
<div class="@classForm">
    @Html.LabelFor(model => model.id, Label, new { @class = "required" })
    <div class="input-group">
        @Html.TextBoxFor(model => model.id, new { @style = "border-radius: 4px 0px 0px 4px; width: 15%;", @class = "form-control number", maxLength = "6" })
        @Html.TextBoxFor(model => model.text, new { @class = "form-control", @style = "width:70%", Disabled = true })
        <a style="border-radius:0px 3px 3px 0px" data-target="#@Sistema.Util.SelectFunctions.getInputId("Modal", Prefix)" id="@Sistema.Util.SelectFunctions.getInputId("btn-localizar", Prefix)" title="Abrir a busca de @Label" class="btn btn-success" data-toggle="modal"><i class="fa fa-search"></i></a>
        @Html.HiddenFor(k => k.text)
    </div>
    @Html.ValidationMessageFor(model => model.id, null, new { @class = "text-danger" })
</div>

@if (flUnidade == "S")
{
    <div class="@Util.Input2">
        @Html.Label("Unidade", new { @class = "no-required" })
        @Html.DropDownListFor(model => model.unidade, Sistema.Select.Produtos.Select.Unidade, new { @class = "form-control", Disabled = true })
    </div>
}

@if (flQuantidade == "S")
{
    <div class="@Util.Input2">
        @Html.Label("qtProduto", "Quantidade", new { @class = "required" })
        @Html.TextBox("qtProduto", "", new { @class = "form-control money", placeholder = "0,00", style = "text-align: right" })
    </div>
}

@if (flValor == "S")
{
    <div class="@Util.Input2">
        @Html.Label("Valor de venda", new { @class = "no-required" })
        @Html.TextBoxFor(model => model.vlVenda, new { @class = "form-control", Disabled = true, placeholder = "0,00", style = "text-align: right" })
    </div>
}

@if (flValorCompra == "S")
{
    <div class="@Util.Input2">
        @Html.Label("vlCompra", "Valor de compra", new { @class = "required" })
        @Html.TextBox("vlCompra", "", new { @class = "form-control money", placeholder = "0,00", style = "text-align: right" })
    </div>
}

@if (flDesconto == "S")
{
    <div class="@Util.Input2">
        @Html.Label("txDesconto", "Desconto (%)", new { @class = "required" })
        @Html.TextBox("txDesconto", "", new { @class = "form-control money", placeholder = "0,00", style = "text-align: right" })
    </div>
}

@if (flTotalItem == "S")
{
    <div class="@Util.Input2">
        @Html.Label("vlTotal", "Total do Produto", new { @class = "no-required" })
        @Html.TextBox("vlTotal", "", new { @class = "form-control money", placeholder = "0,00", style = "text-align: right", disabled = true })
    </div>
}

<div id="@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)" class="modal fade" data-backdrop="static" data-keyboard="false" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body no-padding">
                <div class="panel panel-primary" style="margin-bottom: -1px;">
                    <div class="panel-heading" style="height: 41px; padding-left:2px;font-weight: bold;">
                        <h3 class="panel-title pull-right"><button type="button" style="opacity: inherit;color: #fff;" class="close" data-dismiss="modal">&times;</button></h3>
                        <ul class="nav panel-tabs" style="width:400px">
                            <li class="active"><a data-event="true" style="margin-top:1px;color: black;" data-toggle="tab"><b><i class="fa fa-list" aria-hidden="true"></i> Produtos </b></a></li>
                        </ul>
                    </div>

                    <div style="text-align:right; margin-right:15px">
                        <button id="@Sistema.Util.SelectFunctions.getInputId("Create", Prefix)" onclick="OpenModalCreateProduto()" type="button" class="btn btn-success"><i class="fa fa-plus"></i>  Adicionar</button>
                    </div>

                    <div id="body" class="modal-body" style="padding: 3px 0px 0px 0px;">
                        <div class="container-fluid">
                            <div id="TableProduto"></div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div style="text-align:right">
                            <button id="@Sistema.Util.SelectFunctions.getInputId("Fechar", Prefix)" onclick="FecharModalProduto()" type="button" class="btn btn-outline-dark"><i class="fa fa-times"></i> Fechar</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div id="@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)" class="modal fade" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-body no-padding">
                <div class="panel panel-primary" style="margin-bottom: -1px;">
                    <div class="panel-heading" style="height: 41px; padding-left:2px;font-weight: bold;">
                        <h3 class="panel-title pull-right"><button type="button" style="opacity: inherit;color: #fff;" class="close" data-dismiss="modal">&times;</button></h3>
                        <ul class="nav panel-tabs" style="width:400px">
                            <li class="active"><a data-event="true" style="margin-top:1px;color: black;" data-toggle="tab"><b><i class="fa fa-list-alt" aria-hidden="true"></i> Produtos </b></a></li>
                        </ul>
                    </div>
                    <div id="body" class="modal-body" style="padding: 33px 0px 0px 0px;">
                        <div class="container-fluid">
                            <p style="text-align: right; color: red; font-size:16px; font-weight: bold;">* Campos obrigatórios</p>

                            <div class="form-row isEdit">
                                <div class="@Util.Input2">
                                    @Html.Label("codPais", "Código")
                                    @Html.TextBox("codPais", null, new { @class = "form-control", disabled = true })
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="@Util.Input6">
                                    @Html.Label("nomePais", "País", new { @class = "required" })
                                    @Html.TextBox("nomePais", null, new { @class = "form-control", maxlength = "50", style = "text-transform:uppercase" })
                                    @Html.ValidationMessage("nomePais", null, new { @class = "text-danger" })
                                </div>

                                <div class="@Util.Input3">
                                    @Html.Label("ddi", "DDI", new { @class = "required" })
                                    @Html.TextBox("ddi", null, new { @class = "form-control", maxlength = "5", style = "text-transform:uppercase" })
                                </div>

                                <div class="@Util.Input3">
                                    @Html.Label("sigla", "Sigla", new { @class = "required" })
                                    @Html.TextBox("sigla", null, new { @class = "form-control", maxlength = "2", style = "text-transform:uppercase" })
                                </div>
                            </div>

                            <div class="form-row isEdit">
                                <div class="@Util.Input3">
                                    @Html.Label("dtCadastro", "Data de cadastro", new { @class = "no-required" })
                                    <div class="input-group-append">
                                        @Html.TextBox("dtCadastro", null, new { @class = "form-control", disabled = true })
                                        <span class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>

                                <div class="@Util.Input3 ">
                                    @Html.Label("dtUltAlteracao", "Data de cadastro", new { @class = "no-required" })
                                    <div class="input-group">
                                        @Html.TextBox("dtUltAlteracao", null, new { @class = "form-control", disabled = true })
                                        <div class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div style="text-align:right">
                            <button id="@Sistema.Util.SelectFunctions.getInputId("btnSave", Prefix)" type="button" class="btn btn-success"><i class="fa fa-save"></i>  Salvar</button>
                            <button id="@Sistema.Util.SelectFunctions.getInputId("FecharCreate", Prefix)" onclick="FecharModalCreateProduto()" type="button" class="btn btn-danger"><i class="fa fa-ban"></i>  Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/bootstrap-notify.js")
@Html.AddScriptBlock(
@<script type="text/javascript">

    self = this;
    $(function () {
         $("#@Sistema.Util.SelectFunctions.getInputId("btn-localizar", Prefix)").on("click", function () {
             InitModalProduto();
         });

         $('#@Sistema.Util.SelectFunctions.getInputId("btnSave", Prefix)').on('click', function () {
             self.saveProduto();
         });

         $('#@Sistema.Util.SelectFunctions.getInputId("id", Prefix)').change(function (data, e) {
             var id = $('#@Sistema.Util.SelectFunctions.getInputId("id", Prefix)').val();
             if (id == "") {
                 $("#@Sistema.Util.SelectFunctions.getInputId("id", Prefix)").val("");
                 $("#@Sistema.Util.SelectFunctions.getInputId("text", Prefix)").val("");
                 $("#@Sistema.Util.SelectFunctions.getInputId("vlVenda", Prefix)").val("");
                 $("#@Sistema.Util.SelectFunctions.getInputId("unidade", Prefix)").val("");
             } else {
                 let idFornecedor = !IsNullOrEmpty($('#@idFornecedor').val())?$('#@idFornecedor').val() : null;

                 $.ajax({
                     dataType: 'json',
                     type: 'GET',
                     url: '@Url.Action("JsDetails", "Produtos")',
                     data: { 'id': id, idFornecedor: idFornecedor},
                     success: function (data) {
                         if (!data) {
                             $.notify({ message: 'Nenhum registro encontrado para o código informado', icon: 'fa fa-exclamation' }, { type: 'danger', z_index: 2000 } );
                         }
                         SelectProduto(data)
                     },
                     error: function (err) {
                         alert(err);
                         alert("Erro ao buscar registro");
                     }
                 });
             }
         });
     });

    this.getFormProduto = function() {
        var form = {
                codPais : $('#@Sistema.Util.SelectFunctions.getInputId("codPais", Prefix)'),
                nomePais: $('#@Sistema.Util.SelectFunctions.getInputId("nomePais", Prefix)'),
                ddi: $('#@Sistema.Util.SelectFunctions.getInputId("ddi", Prefix)'),
                sigla: $('#@Sistema.Util.SelectFunctions.getInputId("sigla", Prefix)'),
                dtCadastro: $('#@Sistema.Util.SelectFunctions.getInputId("dtCadastro", Prefix)'),
                dtUltAlteracao: $('#@Sistema.Util.SelectFunctions.getInputId("dtUltAlteracao", Prefix)'),
        }
        return form;
    };

    this.clearProduto = function () {
        var form = self.getFormProduto();
        form.codPais.val("");
        form.nomePais.val("");
        form.ddi.val("");
        form.sigla.val("");
        form.dtCadastro.val("");
        form.dtUltAlteracao.val("");
        form.nomePais.focus();
    };

    this.isValidProduto = function () {
        var valid = true;
        var form = self.getFormProduto();

        if (IsNullOrEmpty(form.nomePais.val())) {
            form.nomePais.blink({ msg: "Campo país é obrigatório" });
            form.nomePais.focus();
            valid = false;
        }

        else if (IsNullOrEmpty(form.ddi.val())) {
            form.ddi.blink({ msg: "Campo DDI é obrigatório" });
            form.ddi.focus();
            valid = false;
        }

        else if (IsNullOrEmpty(form.sigla.val())) {
            form.sigla.blink({ msg: "Campo sigla é obrigatório" });
            form.sigla.focus();
            valid = false;
        }
        return valid;
    };

    getModelProduto = function (form) {
        var model = {
            codigo: form.codPais.val(),
            nomePais: form.nomePais.val(),
            ddi: form.ddi.val(),
            sigla: form.sigla.val(),
        }
        return model;
    };

    this.saveProduto = function () {
        if ($('#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)').val() == "S") {
            this.updateProduto();
        } else {
            this.insertProduto();
        }
    }

    this.insertProduto = function () {
        var form = self.getFormProduto();
        var model = getModelProduto(form);

        if (self.isValidProduto(model)) {

            $.ajax({
                dataType: 'json',
                type: 'POST',
                url: '@Url.Action("jsCreate", "Produtos")',
                data: model,
                success: function (data) {
                    self.clearProduto();
                    InitModalProduto();
                    $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("hide");
                    $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "auto");
                    $.notify({ message: data.message, icon: 'fa fa-exclamation' }, { type: 'success', z_index: 2000 });

                },
                error: function (request) {
                    alert("Erro ao adicionar registro")
                }
            });
        }
    };

    this.updateProduto = function () {
        //debugger;
        var form = self.getFormProduto();
        var model = getModelProduto(form);
        if (self.isValidProduto(model)) {

            $.ajax({
                dataType: 'json',
                type: 'POST',
                url: '@Url.Action("jsUpdate", "Produtos")',
                data: model,
                success: function (data) {
                    self.clearProduto();
                    InitModalProduto();
                    $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("hide");
                    $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "auto");
                    $.notify({ message: data.message, icon: 'fa fa-exclamation' }, { type: 'success', z_index: 2000 });
                },
            });
        }
    };

    function InitModalProduto() {
        $("#TableProduto").empty();
        let table = null
        let idFornecedorAux = !IsNullOrEmpty(@idFornecedor)? $('#@idFornecedor').val(): null;
        let lis = getTableProduto(idFornecedorAux);

        console.log(idFornecedorAux);
        $("#TableProduto").append(lis);


        table = $('#@Sistema.Util.SelectFunctions.getInputId("list", Prefix)').DataTable({
            ajax: { url: $('#@Sistema.Util.SelectFunctions.getInputId("list", Prefix)').attr('data-url') },
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.10.24/i18n/Portuguese-Brasil.json',
            },
            columns: [
                {
                    sortable: false,
                    data: null,
                    sClass: 'details-control center',
                    mRender: function (data) {
                        return '<a class="btn btn-primary btn-sm" data-evet="item" title="Selecionar registro"><i class="fa fa-check"></i> </a>';
                    }
                },
                {
                    sortable: false,
                    data: null,
                    mRender: function (data) {
                        return '<a class="btn btn-warning btn-sm" onclick="OpenEditProduto(' + data.id + ')" title="Alterar registro"><i class="fa fa-edit"></i> </a>';
                    }
                },
                {
                    sClass: "right",
                    data: "id"
                },
                { data: "text" },
                {
                    sClass: "right",
                    data: null,
                    mRender: function (data) {
                        return data.vlVenda.toLocaleString('pt-br', { currency: 'BRL', minimumFractionDigits: 2, maximumFractionDigits: 2 });
                    }
                }

            ],
        });
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").modal("show");

        $('#@Sistema.Util.SelectFunctions.getInputId("list", Prefix) tbody').on('click', 'td.details-control', function () {
            var tr = $(this).closest('tr');
            var row = table.row(tr);
            if (row.child.isShown()) {
                $('div.slider', row.child()).slideUp(function () {
                    row.child.hide();
                    tr.removeClass('shown');
                });
            }
            else {
                row.child(SelectProduto(row.data())).show();
                tr.addClass('shown');
                $('div.slider', row.child()).slideDown();
            }
        });
      }
    function getTableProduto(idFornecedor) {
        let tmp = `<table id="@Sistema.Util.SelectFunctions.getInputId("list", Prefix)" class="table table-striped table-bordered" style="width:100%" data-url="@Url.Action("JsQuery", "Produtos")?idFornecedor=`+idFornecedor+`">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th export="true" style="width:10%">Código</th>
                                <th export="true" style="width:65%">Nome</th>
                                <th export="true" style="width:25%">Valor de venda</th>
                            </tr>
                        </thead>
                   </table>`;
          return tmp;
    };

    function FecharModalProduto() {
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").modal("hide");
    };
    function FecharModalCreateProduto() {
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").css("overflow", "hidden");
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("hide");
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "auto");
        self.clearProduto();
    };

    function OpenModalCreateProduto() {
        $("#@Sistema.Util.SelectFunctions.getInputId("btnUpdate", Prefix)").hide();
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "hidden");
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").css("overflow", "auto");
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("show");
        $("#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)").val("N");
        if ($("#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)").val() == "N") {
            $(".isEdit").hide();
        }
    };

    function loadProduto(data) {
        $(document).trigger('@Sistema.Util.SelectFunctions.getInputId(Prefix, "AfterLoad")', data);
    };

    function SelectProduto(data) {
        loadProduto(data)
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").modal("hide");
        $("#@Sistema.Util.SelectFunctions.getInputId("id", Prefix)").val(data.id);
        $("#@Sistema.Util.SelectFunctions.getInputId("text", Prefix)").val(data.text);
        let valor = data.vlVenda;
        if (data) {
            valor = valor.toLocaleString('pt-br', { currency: 'BRL', minimumFractionDigits: 2, maximumFractionDigits: 2 });
        }
        $("#@Sistema.Util.SelectFunctions.getInputId("vlVenda", Prefix)").val(valor);
        $("#@Sistema.Util.SelectFunctions.getInputId("unidade", Prefix)").val(data.unidade)
        return false;
    };

    function OpenEditProduto(id) {
        $.ajax({
            dataType: 'json',
            type: 'GET',
            url: '@Url.Action("JsDetails", "Produtos")',
            data: { id: id },
            success: function (data) {
                self.clearProduto();
                $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("show");
                $("#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)").val("S");
                if ($("#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)").val() == "S") {
                    $(".isEdit").show();
                }

                $("#@Sistema.Util.SelectFunctions.getInputId("codPais", Prefix)").val(data.id);
                $("#@Sistema.Util.SelectFunctions.getInputId("nomePais", Prefix)").val(data.text);
                $("#@Sistema.Util.SelectFunctions.getInputId("ddi", Prefix)").val(data.ddi);
                $("#@Sistema.Util.SelectFunctions.getInputId("sigla", Prefix)").val(data.sigla);
                $("#@Sistema.Util.SelectFunctions.getInputId("dtCadastro", Prefix)").val(JSONDate(data.dtCadastro));

                $("#@Sistema.Util.SelectFunctions.getInputId("dtUltAlteracao", Prefix)").val(JSONDate(data.dtUltAlteracao));

                $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "auto");
            },
            error: function (request) {
                alert("Erro ao buscar registro");
            }
        });
        return false;
    }
</script>
)