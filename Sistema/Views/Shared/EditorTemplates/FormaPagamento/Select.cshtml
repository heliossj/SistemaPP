@model Sistema.Select.FormaPagamento.Select
@using Sistema.Util;
@{
    bool Disabled = Convert.ToBoolean(ViewData["Disabled"]);
    bool Required = Convert.ToBoolean(ViewData["Required"] ?? true);
    bool OnlySelect = Convert.ToBoolean(ViewData["onlySelect"] ?? true);
    bool LabelVertical = Convert.ToBoolean(ViewData["LabelVertical"]);
    string Label = Convert.ToString(ViewData["Label"] ?? "Forma de pagamento");
    string classLabel = Convert.ToString(ViewData["classLabel"] ?? Util.Input12);
    string classForm = Convert.ToString(ViewData["classForm"] ?? Util.Input12);
    var Prefix = Html.ClientPrefixName().ToString();
    string action = Convert.ToString(ViewBag.Action);
}

@Html.Hidden("isEdit")
@Html.HiddenFor(k => action)
<div class="@classForm">
    @Html.LabelFor(model => model.id, Label, new { @class = "required" })
    <div class="input-group">
        @Html.TextBoxFor(model => model.id, new { @style = "border-radius: 4px 0px 0px 4px; width: 15%;", @class = "form-control number", maxLength = "6" })
        @Html.TextBoxFor(model => model.text, new { @class = "form-control", @style = "width:70%", Disabled = true })
        <a style="border-radius:0px 3px 3px 0px" data-target="#@Sistema.Util.SelectFunctions.getInputId("Modal", Prefix)" id="@Sistema.Util.SelectFunctions.getInputId("btn-localizar", Prefix)" title="Abrir a busca de @Label" class="btn btn-success" data-toggle="modal"><i class="fa fa-search"></i></a>
        @Html.HiddenFor(k => k.text)
    </div>
    @Html.ValidationMessageFor(model => model.id, null, new { @class = "text-danger" })
</div>

<div id="@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)" class="modal fade" data-backdrop="static" data-keyboard="false" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-body no-padding">
                <div class="panel panel-primary" style="margin-bottom: -1px;">
                    <div class="panel-heading" style="height: 41px; padding-left:2px;font-weight: bold;">
                        <h3 class="panel-title pull-right"><button type="button" style="opacity: inherit;color: #fff;" class="close" data-dismiss="modal">&times;</button></h3>
                        <ul class="nav panel-tabs" style="width:400px">
                            <li class="active"><a data-event="true" style="margin-top:1px;color: black;" data-toggle="tab"><b><i class="fa fa-list" aria-hidden="true"></i> Países </b></a></li>
                        </ul>
                    </div>

                    <div style="text-align:right; margin-right:15px">
                        <button id="@Sistema.Util.SelectFunctions.getInputId("Create", Prefix)" onclick="OpenModalCreateFormaPagamento()" type="button" class="btn btn-success"><i class="fa fa-plus"></i>  Adicionar</button>
                    </div>

                    <div id="body" class="modal-body" style="padding: 3px 0px 0px 0px;">
                        <div class="container-fluid">
                            <div id="TableFormaPagamento"></div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div style="text-align:right">
                            <button id="@Sistema.Util.SelectFunctions.getInputId("Fechar", Prefix)" onclick="FecharModalFormaPagamento()" type="button" class="btn btn-outline-dark"><i class="fa fa-times"></i> Fechar</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
<div id="@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)" class="modal fade" role="dialog">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-body no-padding">
                <div class="panel panel-primary" style="margin-bottom: -1px;">
                    <div class="panel-heading" style="height: 41px; padding-left:2px;font-weight: bold;">
                        <h3 class="panel-title pull-right"><button type="button" style="opacity: inherit;color: #fff;" class="close" data-dismiss="modal">&times;</button></h3>
                        <ul class="nav panel-tabs" style="width:400px">
                            <li class="active"><a data-event="true" style="margin-top:1px;color: black;" data-toggle="tab"><b><i class="fa fa-list-alt" aria-hidden="true"></i> Formas de pagamento </b></a></li>
                        </ul>
                    </div>
                    <div id="body" class="modal-body" style="padding: 33px 0px 0px 0px;">
                        <div class="container-fluid">
                            <p style="text-align: right; color: red; font-size:16px; font-weight: bold;">* Campos obrigatórios</p>

                            <div class="form-row isEdit">
                                <div class="@Util.Input2">
                                    @Html.Label("codForma", "Código")
                                    @Html.TextBox("codForma", null, new { @class = "form-control", disabled = true })
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="@Util.Input3">
                                    @Html.Label("Situação")
                                    @Html.DropDownList("situacao", Sistema.Models.CondicaoPagamento.Situacao, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-row">
                                <div class="@Util.Input12">
                                    @Html.Label("nomeForma", "Forma de pagamento", new { @class = "required" })
                                    @Html.TextBox("nomeForma", null, new { @class = "form-control", maxlength = "50", style = "text-transform:uppercase" })
                                    @Html.ValidationMessage("nomeForma", null, new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-row isEdit">
                                <div class="@Util.Input3">
                                    @Html.Label("dtCadastro", "Data de cadastro", new { @class = "no-required" })
                                    <div class="input-group-append">
                                        @Html.TextBox("dtCadastro", null, new { @class = "form-control", disabled = true })
                                        <span class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>

                                <div class="@Util.Input3 ">
                                    @Html.Label("dtUltAlteracao", "Data de cadastro", new { @class = "no-required" })
                                    <div class="input-group">
                                        @Html.TextBox("dtUltAlteracao", null, new { @class = "form-control", disabled = true })
                                        <div class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <div style="text-align:right">
                            <button id="@Sistema.Util.SelectFunctions.getInputId("btnSave", Prefix)" type="button" class="btn btn-success"><i class="fa fa-save"></i>  Salvar</button>
                            <button id="@Sistema.Util.SelectFunctions.getInputId("FecharCreate", Prefix)" onclick="FecharModalCreateFormaPagamento()" type="button" class="btn btn-danger"><i class="fa fa-ban"></i>  Cancelar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@Scripts.Render("~/Scripts/bootstrap-notify.js")
@Html.AddScriptBlock(
@<script type="text/javascript">

    self = this;
    $(function () {
         $("#@Sistema.Util.SelectFunctions.getInputId("btn-localizar", Prefix)").on("click", function () {
             InitModalFormaPagamento();
         });

         $('#@Sistema.Util.SelectFunctions.getInputId("btnSave", Prefix)').on('click', function () {
             salvarForma();
         });


         $('#@Sistema.Util.SelectFunctions.getInputId("id", Prefix)').change(function (data, e) {
             var id = $('#@Sistema.Util.SelectFunctions.getInputId("id", Prefix)').val();
             if (id == "") {
                 $("#@Sistema.Util.SelectFunctions.getInputId("id", Prefix)").val("");
                 $("#@Sistema.Util.SelectFunctions.getInputId("text", Prefix)").val("");
             } else {
                 $.ajax({
                     dataType: 'json',
                     type: 'GET',
                     url: '@Url.Action("JsDetails", "FormaPagamento")',
                     data: { 'id': id },
                     success: function (data) {
                         if (!data) {
                             $.notify({ message: 'Nenhum registro encontrado para o código informado', icon: 'fa fa-exclamation' }, { type: 'danger', z_index: 2000 } );
                         }
                         $("#@Sistema.Util.SelectFunctions.getInputId("id", Prefix)").val(data.id);
                         $("#@Sistema.Util.SelectFunctions.getInputId("text", Prefix)").val(data.text);
                     },
                     error: function (err) {
                         alert(err);
                         alert("Erro ao buscar registro");
                     }
                 });
             }
         });

    });

    getFormFormaPagamento = function() {
        var form = {
                codForma : $('#@Sistema.Util.SelectFunctions.getInputId("codForma", Prefix)'),
                nomeForma: $('#@Sistema.Util.SelectFunctions.getInputId("nomeForma", Prefix)'),
                situacao: $('#@Sistema.Util.SelectFunctions.getInputId("situacao", Prefix)'),
                dtCadastro: $('#@Sistema.Util.SelectFunctions.getInputId("dtCadastro", Prefix)'),
                dtUltAlteracao: $('#@Sistema.Util.SelectFunctions.getInputId("dtUltAlteracao", Prefix)'),
        }
        return form;
    };

    clearFormaPagamento = function () {
        var form = getFormFormaPagamento();
        form.codForma.val("");
        form.nomeForma.val("");
        form.situacao.val("");
        form.dtCadastro.val("");
        form.dtUltAlteracao.val("");
    };

    isValidFormaPagamento = function () {
        var valid = true;
        var form = getFormFormaPagamento();

        if (IsNullOrEmpty(form.situacao.val())) {
            form.situacao.blink({ msg: "Informe a situação" });
            form.situacao.focus();
            valid = false;
        }

        else if (IsNullOrEmpty(form.nomeForma.val())) {
            form.nomeForma.blink({ msg: "Campo forma de pagamento é obrigatório" });
            form.nomeForma.focus();
            valid = false;
        }
        return valid;
    };

    getModelFormaPagamento = function (form) {
        var model = {
            codigo: form.codForma.val(),
            nomeForma: form.nomeForma.val(),
            situacao: form.situacao.val(),
        };
        return model;
    };

    salvarForma = function () {
        if ($('#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)').val() == "S") {
            this.updateFormaPagamento();
        } else {
            this.insertFormaPagamento();
        }
    }

    this.insertFormaPagamento = function () {
        var form = getFormFormaPagamento();
        var model = getModelFormaPagamento(form);

        if (isValidFormaPagamento(model)) {

            $.ajax({
                dataType: 'json',
                type: 'POST',
                url: '@Url.Action("jsCreate", "FormaPagamento")',
                data: model,
                success: function (data) {
                    clearFormaPagamento();
                    InitModalFormaPagamento();
                    $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("hide");
                    $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "auto");
                    $.notify({ message: data.message, icon: 'fa fa-exclamation' }, { type: 'success', z_index: 2000 });

                },
                error: function (request) {
                    alert("Erro ao adicionar registro")
                }
            });
        }
    };

    this.updateFormaPagamento = function () {
        //debugger;
        var form = getFormFormaPagamento();
        var model = getModelFormaPagamento(form);
        if (isValidFormaPagamento(model)) {
            $.ajax({
                dataType: 'json',
                type: 'POST',
                url: '@Url.Action("jsUpdate", "FormaPagamento")',
                data: model,
                success: function (data) {
                    clearFormaPagamento();
                    InitModalFormaPagamento();
                    $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("hide");
                    $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "auto");
                    $.notify({ message: data.message, icon: 'fa fa-exclamation' }, { type: 'success', z_index: 2000 });
                },
            });
        }
    };

    function InitModalFormaPagamento() {
        $("#TableFormaPagamento").empty();
        let table = null
        let lis = getTableFormaPagamento();
        $("#TableFormaPagamento").append(lis);

        table = $('#@Sistema.Util.SelectFunctions.getInputId("list", Prefix)').DataTable({
            ajax: { url: $('#@Sistema.Util.SelectFunctions.getInputId("list", Prefix)').attr('data-url') },
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.10.24/i18n/Portuguese-Brasil.json',
            },
            columns: [
                {
                    sortable: false,
                    data: null,
                    sClass: 'details-control center',
                    mRender: function (data) {
                        return '<a class="btn btn-primary btn-sm" data-evet="item" title="Selecionar registro"><i class="fa fa-check"></i> </a>';
                    }
                },
                {
                    sortable: false,
                    data: null,
                    mRender: function (data) {
                        return '<a class="btn btn-warning btn-sm" onclick="OpenEditFormaPagamento(' + data.id + ')" title="Alterar registro"><i class="fa fa-edit"></i> </a>';
                    }
                },
                { data: "id" },
                { data: "text" }

            ],
        });
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").modal("show");

        $('#@Sistema.Util.SelectFunctions.getInputId("list", Prefix) tbody').on('click', 'td.details-control', function () {
            var tr = $(this).closest('tr');
            var row = table.row(tr);
            if (row.child.isShown()) {
                $('div.slider', row.child()).slideUp(function () {
                    row.child.hide();
                    tr.removeClass('shown');
                });
            }
            else {
                row.child(SelectFormaPagamento(row.data())).show();
                tr.addClass('shown');
                $('div.slider', row.child()).slideDown();
            }
        });
      }
    function getTableFormaPagamento() {
        let tmp = `<table id="@Sistema.Util.SelectFunctions.getInputId("list", Prefix)" class="table table-striped table-bordered" style="width:100%" data-url="@Url.Action("JsQuery", "FormaPagamento")">
                        <thead>
                            <tr>
                                <th></th>
                                <th></th>
                                <th export="true" style="width:10%">Código</th>
                                <th export="true" style="width:90%">Nome</th>
                            </tr>
                        </thead>
                   </table>`;
          return tmp;
    };

    function FecharModalFormaPagamento() {
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").modal("hide");
    };
    function FecharModalCreateFormaPagamento() {
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").css("overflow", "hidden");
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("hide");
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "auto");
        clearFormaPagamento();
    };

    function OpenModalCreateFormaPagamento() {
        $("#@Sistema.Util.SelectFunctions.getInputId("btnUpdate", Prefix)").hide();
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "hidden");
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").css("overflow", "auto");
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("show");
        $("#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)").val("N");
        if ($("#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)").val() == "N") {
            $(".isEdit").hide();
        }
    };

    function SelectFormaPagamento(data) {
        $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").modal("hide");
        $("#@Sistema.Util.SelectFunctions.getInputId("id", Prefix)").val(data.id);
        $("#@Sistema.Util.SelectFunctions.getInputId("text", Prefix)").val(data.text);
        return false;
    };

    function OpenEditFormaPagamento(id) {
        $.ajax({
            dataType: 'json',
            type: 'GET',
            url: '@Url.Action("JsDetails", "FormaPagamento")',
            data: { 'id': id },
            success: function (data) {
                clearFormaPagamento();
                $("#@Sistema.Util.SelectFunctions.getInputId("ModalCreate", Prefix)").modal("show");
                $("#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)").val("S");
                if ($("#@Sistema.Util.SelectFunctions.getInputId("isEdit", Prefix)").val() == "S") {
                    $(".isEdit").show();
                }

                $("#@Sistema.Util.SelectFunctions.getInputId("codForma", Prefix)").val(data.id);
                $("#@Sistema.Util.SelectFunctions.getInputId("nomeForma", Prefix)").val(data.text);
                $("#@Sistema.Util.SelectFunctions.getInputId("situacao", Prefix)").val(data.situacao);
                $("#@Sistema.Util.SelectFunctions.getInputId("dtCadastro", Prefix)").val(JSONDate(data.dtCadastro));
                $("#@Sistema.Util.SelectFunctions.getInputId("dtUltAlteracao", Prefix)").val(JSONDate(data.dtUltAlteracao));

                $("#@Sistema.Util.SelectFunctions.getInputId("ModalLista", Prefix)").css("overflow", "auto");
            },
            error: function (request) {
                alert("Erro ao buscar registro");
            }
        });
        return false;
    }
</script>
)