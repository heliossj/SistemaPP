@model Sistema.Models.Compras
@using Sistema.Util
@{
    bool readOnly = Convert.ToBoolean(ViewBag.ReadOnly);
    string action = Convert.ToString(ViewBag.Action);
    var tam = action == "create" ? 8 : 7;
}

@Html.HiddenFor(k => k.dtEmissaoAux)
@Html.HiddenFor(k => k.finalizar)
@Html.HiddenFor(k => k.modeloAux)
@Html.HiddenFor(k => k.serieAux)
@Html.HiddenFor(k => k.nrNotaAux)
@Html.HiddenFor(k => k.idFornecedor)

@if (action != "create")
{
    @Html.HiddenFor(u => u.codigo)
    <div class="form-row">
        <div class="@Util.Input2">
            @Html.LabelFor(model => model.situacao, new { @class = "required" })
            @Html.TextBoxFor(model => model.situacao, new { @class = "form-control", disabled = true })
        </div>
    </div>
}

<div class="form-row">
    <div class="@Util.Input2">
        @Html.LabelFor(model => model.modelo, new { @class = "required" })
        @Html.TextBoxFor(model => model.modelo, new { @class = "form-control number", maxlength = "2" })
        @Html.ValidationMessageFor(model => model.modelo, null, new { @class = "text-danger" })
    </div>

    <div class="@Util.Input2">
        @Html.LabelFor(model => model.serie, new { @class = "required" })
        @Html.TextBoxFor(model => model.serie, new { @class = "form-control number", maxlength = "1" })
        @Html.ValidationMessageFor(model => model.serie, null, new { @class = "text-danger" })
    </div>

    <div class="@Util.Input2">
        @Html.LabelFor(model => model.nrNota, new { @class = "required" })
        @Html.TextBoxFor(model => model.nrNota, new { @class = "form-control number", maxlength = "9" })
        @Html.ValidationMessageFor(model => model.nrNota, null, new { @class = "text-danger" })
    </div>

    <div class="@Util.Input3">
        @Html.LabelFor(model => model.dtEmissao, new { @class = "required" })
        <div class="input-group-append">
            @Html.TextBoxFor(model => model.dtEmissao, new { @class = "form-control datepicker date" })
            <span class="fa fa-calendar input-group-text" style="font-size:23px"></span>
        </div>
        @Html.ValidationMessageFor(model => model.dtEmissao, null, new { @class = "text-danger" })
    </div>

    <div class="@Util.Input3">
        @Html.LabelFor(model => model.dtEntrega, new { @class = "required" })
        <div class="input-group-append">
            @Html.TextBoxFor(model => model.dtEntrega, new { @class = "form-control datepicker date" })
            <span class="fa fa-calendar input-group-text" style="font-size:23px"></span>
        </div>
        @Html.ValidationMessageFor(model => model.dtEntrega, null, new { @class = "text-danger" })
    </div>

</div>

<div class="form-row">
    @Html.EditorFor(model => model.Fornecedor, "Fornecedores/Select", new { Required = true, Disabled = false })
</div>

<div class="bs-callout bs-callout-primary">
    <h4> Produtos</h4>
    <div class="separador"></div>

    <div id="divAddProduto">
        <div class="form-row">
            @Html.EditorFor(model => model.Produto, "Produtos/Select", new { Disabled = false, Required = true, flValor = "S", flUnidade = "S", flQuantidade = "S", flValorCompra = "S", flDesconto = "S", flTotalItem = "S", classForm = Util.Input10 })

            <div style="margin-block:-1px">
                <button id="addProduto" type="button" class="btn btn-success btn-lg" style="margin-top:35px; font-size:14px" title="Adicionar"><b>Adicionar </b> <i class="fa fa-plus"></i></button>
            </div>
        </div>
    </div>

    @Html.HiddenFor(model => model.jsProdutos)
    <table id="tblProduto" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                @if (action == "create")
                {
                    <th width="5%"></th>
                }
                <th width="5%">Cod</th>
                <th width="40%">Produto</th>
                <th width="10%">Unidade</th>
                <th width="10%">Quant.</th>
                <th width="10%">Vl. compra</th>
                <th width="10%">Desconto</th>
                <th width="10%">Total</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <td id="ftp" colspan="@tam" style="text-align:right"></td>
            </tr>
        </tfoot>
    </table>
</div>

<div class="form-row">
    <div class="@Util.Input12">
        @Html.LabelFor(model => model.observacao)
        @Html.TextAreaFor(model => model.observacao, new { @class = "form-control" })
    </div>
</div>


<div id="divFinaliza">
    <div class="form-row">
        <div class="@Util.Input2">
            @Html.Label("Valor total da compra", new { @class = "no-required" })
            @Html.TextBoxFor(model => model.vlTotal, new { @class = "form-control", Disabled = true, placeholder = "0,00", style = "text-align: right" })
        </div>
    </div>

    <div class="form-row">
        @Html.EditorFor(model => model.CondicaoPagamento, "CondicaoPagamento/Select", new { Required = true, Disabled = false, @classForm = Util.Input10, flParcela = "S" })
    </div>

    <div id="divParcelas">
        @Html.HiddenFor(model => model.jsParcelas)
        <table id="tblParcelas" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th width="10%">Nº parcela</th>
                    <th width="15%">Valor Parcela</th>
                    <th width="10%">Vencimento</th>
                    @if (action == "create")
                    {
                        <th width="55%">Forma de pagamento</th>
                    }
                    else
                    {
                        <th width="45%">Forma de pagamento</th>
                        <th width="10%">Situação</th>
                    }
                </tr>
            </thead>
        </table>
    </div>
</div>

@if (action != "create")
{
    <div class="form-row">
        <div class="@Util.Input3">
            @Html.Label("Data de entrada")
            <div class="input-group-append">
                @Html.HiddenFor(model => model.dtCadastro)
                @Html.TextBoxFor(model => model.dtCadastro, new { @class = "form-control datepicker date", disabled = true })
                <span class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></span>
            </div>
        </div>
    </div>
}
