@model Sistema.Models.ContasReceber
@using Sistema.Util
@{
    bool readOnly = Convert.ToBoolean(ViewBag.ReadOnly);
    string action = Convert.ToString(ViewBag.Action);
}

@Html.HiddenFor(u => u.codigo)
@Html.HiddenFor(u => u.codVenda)
@Html.HiddenFor(u => u.situacao)
<div class="form-row">
    <div class="@Util.Input3">
        @Html.LabelFor(model => model.situacao)
        @Html.TextBoxFor(model => model.situacao, new { @class = "form-control", disabled = true })
    </div>

    <div class="@Util.Input3">
        @Html.HiddenFor(u => u.nrParcela)
        @Html.LabelFor(model => model.nrParcela)
        @Html.TextBoxFor(model => model.nrParcela, new { @class = "form-control", disabled = false })
    </div>
</div>

<div class="form-row">
    @Html.EditorFor(model => model.Cliente, "Clientes/Select", new { Disabled = false })
</div>

<div class="form-row">
    @Html.EditorFor(model => model.FormaPagamento, "FormaPagamento/Select", new { Disabled = false })
</div>

<div class="form-row" style="">
    @Html.HiddenFor(u => u.vlParcela)
    <div class="@Util.Input3">
        @Html.LabelFor(model => model.vlParcela)
        @Html.TextBoxFor(model => model.vlParcela, new { @class = "form-control money", disabled = false })
    </div>

    <div class="@Util.Input3">
        @Html.LabelFor(model => model.dtVencimento)
        <div class="input-group-append">
            @Html.HiddenFor(model => model.dtVencimento)
            @Html.TextBoxFor(model => model.dtVencimento, new { @class = "form-control datepicker date", disabled = true })
            <span class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></span>
        </div>
    </div>

    @if (Model.situacao == "PAGA")
    {
        <div class="@Util.Input3">
            @Html.LabelFor(model => model.dtPagamento)
            <div class="input-group-append">
                @Html.HiddenFor(model => model.dtPagamento)
                @Html.TextBoxFor(model => model.dtPagamento, new { @class = "form-control datepicker date", disabled = true })
                <span class="input-group-addon input-group-text"><i class="fa fa-calendar"></i></span>
            </div>
        </div>
    }
</div>

<script type="text/javascript">
    let input = $('input');
    //console.log(input.length)
    for (var i = 0; i < input.length; i++) {
        let id = $(input[i]).attr("id");
        document.getElementById(id).readOnly = true
    }
    $("#Cliente_btn-localizar").hide()
    $("#FormaPagamento_btn-localizar").hide()
</script>


